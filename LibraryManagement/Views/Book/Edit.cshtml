@model LibraryManagement.Models.ViewModels.BookViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Edit</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit Book</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Book.bookID)

        <div class="form-group">
            @Html.LabelFor(model => model.Book.title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Book.title)
                @Html.ValidationMessageFor(model => model.Book.title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Book.published_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Book.published_date)
                @Html.ValidationMessageFor(model => model.Book.published_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Book.standard_charge, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Book.standard_charge)
                @Html.ValidationMessageFor(model => model.Book.standard_charge)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Book.penalty_charge, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Book.penalty_charge)
                @Html.ValidationMessageFor(model => model.Book.penalty_charge)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Book.publisherID, "publisherID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("publisherID", null, String.Empty, new { @class = "form-control m-b" })
                @Html.ValidationMessageFor(model => model.Book.publisherID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AllBookCategories, "BookCategories", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedBookCategories, Model.AllBookCategories, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AllAuthors, "Authors", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedAuthors, Model.AllAuthors, new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}


                </div>
            </div>
        </div>
    </div>
 </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
