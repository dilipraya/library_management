@model LibraryManagement.Models.ViewModels.GroupedUserViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Staffs</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Staffs</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            S.N.
        </th>
        <th>
            User Name
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>Actions</th>
    </tr>
    @{ 
        int counter = 1;
    }
@foreach (var user in Model.Users) {
    <tr>
        <td>
            @(counter++)
        </td>
        <td>
            @user.UserName
        </td>
        <td>
            @user.FirstName
        </td>
        <td>
            @user.LastName
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = user.UserName}, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



